{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["MONGODB_URL", "JWT_SECRET", "DB_NAME", "AUTH_SECRET", "NEXT_PUBLIC_API_URI", "AUTH_GOOGLE_ID", "AUTH_GOOGLE_SECRET", "GROQ_API_KEY"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
